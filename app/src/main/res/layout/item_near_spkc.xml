<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_oval_redpoint" />
            <TextView
                android:id="@+id/tv_vide_time"
                android:layout_toRightOf="@+id/red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="基础书法入门课程"
                android:textColor="#444444"
                android:textSize="13sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_backimg"
            android:layout_below="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:src="@mipmap/sp_bfbg"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_backimg"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColor="#444444"
            android:ellipsize="middle"
            android:layout_marginTop="8dp"
            android:text="视频名称"/>
    </RelativeLayout>




</LinearLayout>
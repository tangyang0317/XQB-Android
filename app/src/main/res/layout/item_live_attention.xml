<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_live_attention_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_live_attention_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/iv_live_attention_avatar"
            android:text="X老师"
            android:textColor="#000000"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/tv_live_attention_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_live_attention_name"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_live_attention_avatar"
            android:text="XX省"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_live_attention_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="1人正在观看"
            android:textColor="#999999"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_live_attention_state"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_oval_live"
            android:gravity="center"
            android:text="直播中"
            android:textColor="#ffffff"
            android:textSize="11sp"/>

        <ImageView
            android:background="#50999999"
            android:id="@+id/iv_live_attention_pic"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#52aaf4"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200次点赞"
                android:textColor="#52aaf4"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_live_attention_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#美术直播放大招"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部评论 (66)"
            android:textSize="13sp"
            android:textColor="#999999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户001: "
                android:textSize="11sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张老师，整体效果不错！"
                android:textSize="11sp"
                android:textColor="#999999"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white">
    </RelativeLayout>
</LinearLayout>
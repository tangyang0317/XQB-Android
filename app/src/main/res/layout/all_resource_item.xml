<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="272dp"
             android:layout_marginTop="6dp"
             android:paddingLeft="11dp"
             android:paddingRight="10dp"
             android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/img_resource_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tv_resource_type"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:background="#FFEF4E4C"
                android:gravity="center"
                android:text="测试"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_oval_time"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_oval_greenpoint"/>

                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="26dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="01:05"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp"/>
            </LinearLayout>
            >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resource_title"
                android:layout_width="244dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="独家 | 芭蕾舞现场教程"
                android:textColor="#FF000000"
                android:textSize="16sp">
            </TextView>

            <TextView
                android:id="@+id/tv_resource_money"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="8dp"
                android:text="￥18"
                android:textColor="#FFEF4E4C"
                android:textSize="16sp">
            </TextView>

            <TextView
                android:id="@+id/tv_resource_looks"
                android:layout_width="73dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="38dp"
                android:text="57万次播放"
                android:textColor="#FF686871"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >

            <com.zhangju.xingquban.interestclassapp.view.imageView.CustomRoundView
                android:id="@+id/img_author_head"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/welcome"
                />

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="紫气东来"
                android:textColor="#FFADADAD"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/img_video_comment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="95dp"
                android:background="@drawable/resource_comment_normal"/>

            <TextView
                android:id="@+id/tv_video_commentnum"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:text="2109"
                android:textColor="#FFACACAC"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/img_video_start"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:background="@drawable/i_mycollection_icon"/>

            <TextView
                android:id="@+id/tv_video_startnum"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="2109"
                android:textColor="#FFACACAC"
                android:textSize="11sp"
                />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>

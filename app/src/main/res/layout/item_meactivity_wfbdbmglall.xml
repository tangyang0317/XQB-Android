<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.zhangju.xingquban.interestclassapp.view.imageView.CustomRoundView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/me_touxiang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_wfbdbmglall_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小怪兽打游戏"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_wfbdbmglall_piaoq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="票券1"
                android:textColor="@color/color_main"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="right">

                <TextView
                    android:id="@+id/item_wfbdbmglall_youxiao"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_17"
                    android:background="#7CC370"
                    android:gravity="center"
                    android:text="有效"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_wfbdbmglall_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="5分钟前"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>


</LinearLayout>
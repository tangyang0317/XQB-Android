<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@color/white">


    <ImageView
        android:id="@+id/near_recyclerview_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/imagetext" />

    <LinearLayout
        android:id="@+id/near_recyclerview_linlayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:layout_toRightOf="@id/near_recyclerview_item_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/near_recyclerview_item_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_recyler_item_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15dp" />

        <TextView
            android:id="@+id/near_recyclerview_item_huiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="新店" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/near_recyclerview_linlayoutpj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/near_recyclerview_linlayout_title"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/near_recyclerview_item_image"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:src="@drawable/home_recyler_item_pingjia"

            />

        <ImageView
            android:id="@+id/start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:src="@drawable/home_recyler_item_pingjia"

            />

        <ImageView
            android:id="@+id/start3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:src="@drawable/home_recyler_item_pingjia"

            />

        <ImageView
            android:id="@+id/start4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:src="@drawable/home_recyler_item_pingjiatwo"

            />

        <ImageView
            android:id="@+id/start5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:src="@drawable/home_recyler_item_pingjiatwo" />

        <TextView
            android:id="@+id/near_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="35" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/near_recyclerview_linlayout_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/near_recyclerview_linlayoutpj"
        android:layout_margin="@dimen/dp_5"
        android:layout_toRightOf="@id/near_recyclerview_item_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/near_recyclerview_item_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="瑜伽"
            android:visibility="gone" />

        <TextView
            android:id="@+id/near_recyclerview_item_coursename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="生活体验" />

        <TextView
            android:id="@+id/near_recyclerview_item_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_10dp"
            android:singleLine="true"
            android:text="花园店2.0km" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/near_recyclerview_linlayout_shipin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/near_recyclerview_linlayout_tab"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/near_recyclerview_item_image"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/text_20dp"
            android:layout_height="@dimen/text_20dp"
            android:layout_margin="@dimen/dp_2"
            android:src="@drawable/home_recyler_item_camear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="视频展示" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/near_recyclerview_linlayout_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/near_recyclerview_linlayout_shipin"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/near_recyclerview_item_image"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥" />

        <TextView
            android:id="@+id/near_recyclerview_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999.0" />


        <TextView
            android:id="@+id/near_recyclerview_item_money_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="/课程起"
            android:textSize="@dimen/text_10dp" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_20"
        android:src="@drawable/home_recyler_item_datehui"
        android:visibility="gone" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_height="wrap_content"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:background="@drawable/card_background_line"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/img_resource_small"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="卡农你听过么"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:id="@+id/img_article_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_weight="8">
                <TextView
                    android:id="@+id/isTop"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_oval_top"
                    android:gravity="center"
                    android:text="置顶"
                    android:textColor="@color/red"
                    android:textSize="11sp"
                    />
                <ImageView
                    android:id="@+id/img_video_comment"
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/i_mycollection_icon"/>

                <TextView
                    android:id="@+id/tv_video_commentnum"
                    android:layout_width="28dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2109"
                    android:textColor="#FFACACAC"
                    android:textSize="11sp"
                    />

                <ImageView
                    android:id="@+id/img_video_start"
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/resource_comment_normal"/>

                <TextView
                    android:id="@+id/tv_video_startnum"
                    android:layout_width="28dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="0dp"
                    android:text="2109"
                    android:textColor="#FFACACAC"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_artcile_time"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="1小时前"
                    android:gravity="center"
                    android:textColor="#FFACACAC"
                    android:textSize="11sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

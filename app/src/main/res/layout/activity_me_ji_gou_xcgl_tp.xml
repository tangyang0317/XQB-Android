<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6f6f6"
    tools:context="com.zhangju.xingquban.interestclassapp.ui.fragment.me.Institutions.xcgl.MeJiGouXcglTp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/me_jg_xcgl_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10" />

    <GridView
        android:id="@+id/me_jg_xcgl_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/me_jg_xcgl_Upphoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:background="@color/color_main"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/me_jjgl_xcgl_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="上传图片"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>

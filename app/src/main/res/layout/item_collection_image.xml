<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/deleteFlag"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:paddingRight="16dp"
        android:checked="true"
        android:gravity="center"
        android:button="@drawable/me_ktvip_select"/>

    <LinearLayout
        android:id="@+id/contentView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="图片标题"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher"/>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/cover2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher"/>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/cover3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_small"
                android:drawableLeft="@mipmap/home_data_spkc_pl"
                android:drawablePadding="3dp"
                tools:text="0"/>

            <TextView
                android:id="@+id/collectionCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_small"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/home_data_spkc_x"
                android:drawablePadding="3dp"
                tools:text="0"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_small"
                android:layout_marginRight="5dp"
                tools:text="2017-12-12"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
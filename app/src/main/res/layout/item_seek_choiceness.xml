<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/seek_choiceness_imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:src="@drawable/seek_choicenss_image" />

            <TextView
                android:id="@+id/seek_choiceness_lable"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_yellow"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/black"
                android:visibility="visible" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/button_text_blue"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/black"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:id="@+id/seek_choiceness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="六一|“城市生存”之魔都生存挑战"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/seek_choiceness_money"
                android:text="￥"
                android:textColor="@color/color_main"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/seek_choiceness_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:text="158"
                android:textColor="@color/color_main"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/seek_choiceness_mf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:text="免费"
                android:textColor="@color/color_main"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/seek_choiceness_xqb_qzjb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="兴趣班亲子举办" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/seek_sl_time" />

            <TextView
                android:id="@+id/seek_choiceness_ks_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="2017年5月30日 14：30 开始" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/seek_sl_wz"
                android:visibility="gone" />

            <TextView
                android:id="@+id/seek_choiceness_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="鲁迅公园,上海自然博物馆"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/seek_sl_jzsj" />

            <TextView
                android:id="@+id/seek_choiceness_jz_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="2017年6月30日 14：30 截止" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
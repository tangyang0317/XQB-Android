<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="@dimen/dp_10"
    android:background="@mipmap/me_activity_wdpj_itembg"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_me_activity_wdpj_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="六一|城市生存之魔都生存挑战"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_me_activity_wdpj_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="北京市朝阳区197号"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_me_activity_wdpj_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="6月13日 10:06 开始"
            android:textColor="@color/color_main"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_me_activity_wdpj_huiyuanp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="会员票"
            android:textColor="@color/color_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_me_activity_wdpj_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="158"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/item_me_activity_wdpj_youx"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/green"
            android:text="有效"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/item_me_activity_wdpj_wux"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:text="已退票"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp_10"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
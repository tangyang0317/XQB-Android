<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.fastlib.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:titleText="绑定支付宝/微信"
        app:leftIcon="@drawable/home_city_back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <android.support.v4.widget.Space
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/bindAlipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/me_wallet_bind_zhifubao"
            android:gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:padding="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/center"
            android:text="支付宝"/>

        <TextView
            android:id="@+id/bindWechatPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/me_wallet_bind_weixin"
            android:gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/center"
            android:text="支付宝"/>
    </RelativeLayout>
</LinearLayout>
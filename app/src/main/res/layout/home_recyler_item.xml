<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/home_recyclerview_item_image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/imagetext" />

        <LinearLayout
            android:id="@+id/home_recyclerview_linlayout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/home_recyclerview_item_image"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_recyclerview_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_recyler_item_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15dp" />

            <ImageView
                android:id="@+id/home_recyclerview_item_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/home_imgae_huiyuan"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_recyclerview_linlayoutpj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recyclerview_linlayout_title"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/home_recyclerview_item_image"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@drawable/home_recyler_item_pingjia" />

            <ImageView
                android:id="@+id/start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@drawable/home_recyler_item_pingjia"

                />

            <ImageView
                android:id="@+id/start3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@drawable/home_recyler_item_pingjia"

                />

            <ImageView
                android:id="@+id/start4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@drawable/home_recyler_item_pingjiatwo" />

            <ImageView
                android:id="@+id/start5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@drawable/home_recyler_item_pingjiatwo" />

            <TextView
                android:id="@+id/near_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="35条"
                android:visibility="gone"
                android:textColor="#888888"
                android:textSize="12sp" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_40"
                android:src="@drawable/home_recyler_item_datehui"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_recyclerview_linlayout_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recyclerview_linlayoutpj"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/home_recyclerview_item_image"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_recyclerview_item_coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:singleLine="true"
                android:text="生活体验"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_recyclerview_linlayout_shipin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recyclerview_linlayout_tab"
            android:layout_toRightOf="@id/home_recyclerview_item_image"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:src="@drawable/home_recyler_item_camear" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="视频展示"
                android:textColor="#888888"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_recyclerview_linlayout_kecheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recyclerview_linlayout_shipin"
            android:layout_toRightOf="@id/home_recyclerview_item_image"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/dp_2"
                android:src="@mipmap/home_recyler_item_course" />

            <TextView
                android:id="@+id/home_recyclerview_item_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="课程展示"
                android:textColor="#888888"
                android:textSize="13sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/money_relatelayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/home_recyclerview_linlayout_kecheng"
            android:layout_toRightOf="@id/home_recyclerview_item_image">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_recyclerview_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_money"
                    android:visibility="gone"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_recyclerview_item_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="徐家汇"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/home_recyclerview_item_cityNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0km"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/money_relatelayout"
            android:background="@color/f6f6f6" />

    </RelativeLayout>

</RelativeLayout>
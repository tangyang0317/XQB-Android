<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/education"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textColor="#444444"
            android:text="机构名称"/>

        <TextView
            android:id="@+id/educationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/list_arrow_normal_small"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            tools:text="卢晓燕书法私塾"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fcfcfc"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/setupDateLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textColor="#444444"
            android:text="成立时间"/>

        <TextView
            android:id="@+id/setupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            tools:text="2016年10月31日"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fcfcfc"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textColor="#444444"
            android:text="法人姓名"/>

        <TextView
            android:id="@+id/legalPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            tools:text="李一行"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fcfcfc"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/contactPhoneLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textColor="#444444"
            android:text="联系方式"/>

        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/list_arrow_normal_small"
            android:gravity="center_vertical"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            tools:text="1867897041" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fcfcfc"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/teacherAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="授课地点"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/teachAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/list_arrow_normal_small"
            android:gravity="center_vertical"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            tools:text="上海市长宁区威宁路511弄40号1103" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background"/>

    <LinearLayout
        android:id="@+id/qualificationLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textColor="#444444"
            android:text="资格认证"/>

        <TextView
            android:id="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/list_arrow_normal_small"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            tools:text="未认证"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fcfcfc"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textColor="#444444"
            android:text="平台认证"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/list_arrow_normal_small"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="#888888"
            android:textSize="@dimen/font_size_small"
            android:text="已认证"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/live_background"
    android:orientation="horizontal"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="@dimen/dp_5"
            android:text="教育"
            android:textColor="#FF000000"
            android:textSize="16sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_news_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableLeft="@drawable/icon_disscuz_12_12"
                android:drawablePadding="@dimen/dp_5"
                android:text="2109"
                android:textColor="#FFACACAC"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_news_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/love_red"
                android:drawablePadding="@dimen/dp_5"
                android:text="2109"
                android:textColor="#FFACACAC"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/thumbCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFACACAC"
                android:textSize="11sp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                tools:text="点赞100次"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingRight="@dimen/dp_5"
                android:text="1小时前"
                android:textColor="#FFACACAC"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>


        <ImageView
            android:id="@+id/img_news_back"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_height="match_parent" />

</LinearLayout>

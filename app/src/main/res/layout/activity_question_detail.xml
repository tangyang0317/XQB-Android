<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.zhangju.xingquban.interestclassapp.ui.fragment.find.Wenda.Question.fresh.QuestionDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/return_image"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_question"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="查看"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>

        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_btn_share_red"/>

        <RelativeLayout
            android:id="@+id/collection_click"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_share">

            <ImageView
                android:id="@+id/image_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/comment_iwantcomment_star_selected"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/item_question_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="想请问大家，有联系书法推荐毛笔的么？最好狼嚎"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="测试"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/item_question_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@mipmap/find_wenda_qizi"/>

                        <TextView
                            android:id="@+id/item_question_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="书法"
                            android:textColor="@color/bbbbbb"/>

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@color/efefef"/>

                        <TextView
                            android:id="@+id/item_question_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1分钟前"
                            android:textColor="@color/bbbbbb"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/f0f0f0"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center|left"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/item_question_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="3个回答"
                            android:textColor="@color/bbbbbb"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <TextView
                            android:id="@+id/item_question_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="来自某某的提问"
                            android:textColor="@color/bbbbbb"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/base_gray"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/quesion_detail_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/image_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/me_find_message_bj"/>
    </FrameLayout>
</LinearLayout>

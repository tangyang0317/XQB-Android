<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6f6f6"
    android:orientation="vertical"
    tools:context="com.zhangju.xingquban.interestclassapp.ui.fragment.me.MyRecrouse.ChargeActivity">

    <com.zhangju.xingquban.interestclassapp.ui.widget.PublicHead
        android:id="@+id/me_recrouse_popw_ypHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/color_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用类型"
            android:textColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/juxingbg_colorhui"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_red"
                android:gravity="center"
                android:text="免费"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收费"
                android:textColor="@color/view_gray" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_charge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center|left"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/color_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付费标准"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edit_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:gravity="right"
            android:hint="请输入收费标准"
            android:textColor="@color/color_main"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</LinearLayout>

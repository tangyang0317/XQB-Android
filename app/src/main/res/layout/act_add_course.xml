            <LinearLayout
                android:id="@+id/teachCourseLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#444444"
                    android:text="授课科目"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#EF4E4C"
                    android:text="*"/>

                <TextView
                    android:id="@+id/teachCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/list_arrow_normal_small"
                    android:drawablePadding="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="请选择"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@android:color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:text="课程描述"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF4E4C"
                    android:layout_marginLeft="10dp"
                    android:text="*"/>

                <EditText
                    android:id="@+id/courseDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/font_size_normal"
                    android:layout_marginLeft="10dp"
                    android:lines="3"
                    android:gravity="top"
                    android:hint="请输入少于22字符"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="1px"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:text="课程简介"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF4E4C"
                    android:layout_marginLeft="10dp"
                    android:text="*"/>

                <EditText
                    android:id="@+id/courseProfile"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="8"
                    android:background="@null"
                    android:gravity="top"
                    android:textSize="@dimen/font_size_normal"
                    android:hint="请输入少于100字符"/>
            </LinearLayout>

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="带“*”号为必填事项"/>

            <Button
                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_red"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:textColor="@android:color/white"
                android:minHeight="0dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:text="提交"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhangju.xingquban.interestclassapp.ui.fragment.me.Lesson.MyLesson">

    <com.zhangju.xingquban.interestclassapp.ui.widget.PublicHead
        android:id="@+id/me_lesson_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/live_color_main" />


    <android.support.design.widget.TabLayout
        android:id="@+id/me_lesson_tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_main"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_main"
        app:tabTextColor="@color/color_tab_text" />

    <android.support.v4.view.ViewPager
        android:id="@+id/me_lesson_viewpage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white" />

</LinearLayout>

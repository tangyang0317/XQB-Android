<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.zhangju.xingquban.interestclassapp.ui.fragment.find.SeekMessage.FindMessageDataXq">

    <com.zhangju.xingquban.interestclassapp.ui.widget.PublicHead
        android:id="@+id/meMessage_dataXq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f6f6f6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/find_messageXq_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="centerCrop"
                android:src="@mipmap/find_message_topimage"
                android:visibility="gone"/>

            <include layout="@layout/layout_banner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/me_messageXq_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="逸梵书苑暑假班招生"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/me_messageXq_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="逸梵书苑"
                    android:textColor="#686871"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/find_messagexq_time" />

                    <TextView
                        android:id="@+id/me_messageXq_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="2017年6月3日"
                        android:textColor="#686871"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#D8D8D8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/find_messagexq_city" />

                    <TextView
                        android:id="@+id/me_messageXq_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="上海市"
                        android:textColor="#686871"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="信息详情"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/me_messageXq_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:text="青叶书院开课啦！提高孩子书写能力！传播中国传统文化！软笔书法/硬笔书法全季班/学期班/假期班/成人班地址:上海市松江区荣乐东路2369弄绿地大厦45号211 李老师:15821888508（微信） 蒋老师:13661882528（微信） 青叶书院上课时间表如下: 1、大班（10~15人） 学期班24课时，每月4课时（周六周日9.30-11.00，13.00-14.30，15.00-16.30三个时间段之一），收费2000元。 暑假班90课时，每两天3个课时（9.30-11.00，13.00-14.30，15.00-16.30三个时段全天），收费3000元 2、小班（1-6人） 成人班24课时，每月周一至周五13.00-14.30，15.00-16.30，18.30-20.00三个时段之一，收费3000元 学期班24课时，每月4课时（周六周日9.30-11.00，13.00-14.30，15.00-16.00三个时间段之一），收费3000元。 备注:现青叶书院新开业优惠前十名报名者8折优惠，更有试听课程98元3课时，预知详情可直接微信咨询。"
                android:textColor="#686871"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>

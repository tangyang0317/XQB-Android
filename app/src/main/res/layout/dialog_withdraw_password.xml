<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="请输入支付密码"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@mipmap/find_tw_lable_x"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font_size_normal_high"
        android:text="提现金额（元）"/>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font_size_normal_high"
        android:text="3526.23"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background"/>

        <LinearLayout
            android:id="@+id/checkboxGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <com.fastlib.widget.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.zhangju.xingquban.interestclassapp.refactor.common.widget.PasswordCheckbox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.fastlib.widget.SquareLayout>

            <com.fastlib.widget.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.zhangju.xingquban.interestclassapp.refactor.common.widget.PasswordCheckbox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.fastlib.widget.SquareLayout>

            <com.fastlib.widget.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.zhangju.xingquban.interestclassapp.refactor.common.widget.PasswordCheckbox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.fastlib.widget.SquareLayout>

            <com.fastlib.widget.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.zhangju.xingquban.interestclassapp.refactor.common.widget.PasswordCheckbox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.fastlib.widget.SquareLayout>

            <com.fastlib.widget.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.zhangju.xingquban.interestclassapp.refactor.common.widget.PasswordCheckbox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.fastlib.widget.SquareLayout>

            <com.fastlib.widget.SquareLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.zhangju.xingquban.interestclassapp.refactor.common.widget.PasswordCheckbox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.fastlib.widget.SquareLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@null"
            android:maxLength="6"
            android:textCursorDrawable="@android:color/transparent"
            android:textColor="@android:color/transparent"
            android:inputType="number"/>
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhangju.xingquban.interestclassapp.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/image_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/pic_delete"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        android:layout_alignParentRight="true"
        android:background="@mipmap/home_data_xdp_delete"
        android:padding="@dimen/dp_5" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:text="10:10"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />


</com.zhangju.xingquban.interestclassapp.view.SquareRelativeLayout>
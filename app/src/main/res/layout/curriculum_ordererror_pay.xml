<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fastlib.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@android:color/white"
        app:leftIcon="@drawable/home_city_back"
        app:titleText="支付失败"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/re_dingdan"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/tv_order_sucess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付成功"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_jxgoumai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="继续购买"
                    android:textSize="14sp"
                    android:layout_below="@+id/tv_order_sucess"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#FF493D"
                    android:background="@drawable/shape_bg_apply_to_org_selected"/>
                <View
                    android:id="@+id/center"
                    android:layout_width="40dp"
                    android:layout_below="@+id/tv_order_sucess"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/tv_godingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前往我的订单"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/center"
                    android:layout_below="@+id/tv_order_sucess"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#FF493D"
                    android:background="@drawable/shape_bg_apply_to_org_selected"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/img_kcpic"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <TextView
                    android:id="@+id/tv_kcname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_kcpic"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="陆晓燕书法"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="仅售100元"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:ellipsize="middle"
                    android:layout_toRightOf="@+id/img_kcpic"
                    android:layout_below="@+id/tv_kcname"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/order_num"
                    android:layout_below="@+id/tv_summary"
                    android:layout_toRightOf="@+id/img_kcpic"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text=""
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zhangju.xingquban.interestclassapp.ui.fragment.home.ppjs.HomeDataPpjs">

    <com.zhangju.xingquban.interestclassapp.ui.widget.PublicHead
        android:id="@+id/home_data_ppjs_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhangju.xingquban.interestclassapp.view.scrollerview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/f6f6f6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/headpic"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:src="@mipmap/home_data_jgjj_image" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="卢晓燕咸宁书法私塾"
                            android:textColor="@color/c44444"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/home_recyclerview_item_huiyuan"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:visibility="gone"
                            android:src="@drawable/home_imgae_huiyuan" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/fensishu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="@color/c88888"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/kechengshu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共8个课程"
                            android:textColor="@color/c88888"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                </LinearLayout>


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/home_data_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentTop="true"
                    android:background="@color/f5f5f5" />
                <ImageView
                    android:id="@+id/home_data_wz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/home_data_wz" />

                <TextView
                    android:id="@+id/home_data_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/home_data_wz"
                    android:textSize="13sp"
                    android:text="天山星辰" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/list_arrow_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/f5f5f5" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/f6f6f6" />
            <LinearLayout
                android:id="@+id/home_data_attestation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_sfrz"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/home_data_rz" />

                <TextView
                    android:id="@+id/tv_sfrz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="身份认证"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_ptrz"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/home_data_rz" />

                <TextView
                    android:id="@+id/tv_ptrz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="平台认证"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_zzrz"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/home_data_rz" />

                <TextView
                    android:id="@+id/tv_zzrz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="资质认证"
                    android:textSize="12sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="@string/jg_xiangqing"
                    android:textColor="@color/c88888"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </com.zhangju.xingquban.interestclassapp.view.scrollerview.ObservableScrollView>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_data_sjkc_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_data_sjkc_zwbg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/home_data_sjkc_image"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/head_tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home_data_sjkc_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:text="硬笔书法课"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="徐家汇3.0km"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@+id/head_tt"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/color_main"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/home_data_sjkc_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="399"
                    android:textColor="@color/color_main"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="起"
                    android:textColor="#888888"
                    android:textSize="11sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/head_tt"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg_red"
                android:gravity="center"
                android:text="立即抢课"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_price"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/home_data_sjkc_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硬笔书法"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#888888" />

                <TextView
                    android:id="@+id/home_data_sjkc_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正式课程"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#888888" />

                <TextView
                    android:id="@+id/home_data_sjkc_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10人以下"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</LinearLayout>
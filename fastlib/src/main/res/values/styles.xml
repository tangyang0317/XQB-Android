<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
    </style>

    <style name="MaterialTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyNoActionBar" parent="Theme.AppCompat.NoActionBar"/>

    <style name="BottomDialogStyle" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/trans_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/trans_top_to_bottom</item>
    </style>
</resources>
